<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NotesApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:colorPrimary">@color/yellow</item>
        <item name="android:colorPrimaryDark">@color/darkYellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.NotesApp" parent="Base.Theme.NotesApp" />

    <style name="floatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="cornerRadius">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">28dp</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:clickable">true</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="lightColorText" parent="Base.Theme.NotesApp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
       <item name="android:textColor">#CB393838</item>
    </style>

    <style name="EditText" parent="Base.Theme.NotesApp">
        <item name="android:textColorHint">#E8242424</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:inputType">text</item>
    </style>



</resources>